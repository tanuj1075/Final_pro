{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "vercel-php"
    },
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(?:css|js|mjs|png|jpe?g|gif|svg|webp|avif|ico|mp4|webm|woff2?|ttf))",
      "dest": "/$1"
    },
    {
      "src": "/about/?$",
      "dest": "/api/index.php?route=about"
    },
    {
      "src": "/contact/?$",
      "dest": "/api/index.php?route=contact"
    },
    {
      "src": "/$",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php?route=$1"
    }
  ]
}
